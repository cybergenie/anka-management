<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:m="clr-namespace:Anka2.Models" 
                    xmlns:mc="clr-namespace:Anka2.Models.SPPBValueConverter" 
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:local="clr-namespace:Anka2.Views">
    <StackPanel x:Key="SPPB">
        <StackPanel.Resources>
            <mc:SPPBNumberConverter x:Key="SPPBNumberConverter"/>
            <m:GenderConverter x:Key="GenderConverter"/>
            <mc:BalanceTesting1Converter x:Key="BalanceTesting1Converter"/>
            <mc:BalanceTesting2Converter x:Key="BalanceTesting2Converter"/>
            <mc:BalanceTesting3Converter x:Key="BalanceTesting3Converter"/>
            <mc:WalkingTestingConverter x:Key="WalkingTestingConverter"/>
        </StackPanel.Resources>
        <StackPanel Orientation="Horizontal" Height="25" Margin="5">
            <Label Content="姓  名：" Height="25" Width="50" />
            <Label x:Name="lbSPPBName" Height="25" Width="65" Content="{Binding BasicInfo.Name}"/>
            <Label Content="性  别：" Height="25" Width="50" />
            <Label x:Name="lbSPPBMale" Height="25" Width="65" Content="{Binding BasicInfo.Male,Converter={StaticResource GenderConverter}}"/>
            <Label Content="年  龄：" Height="25" Width="50" />
            <Label x:Name="lbSPPBAge" Height="25" Width="65" Content="{Binding BasicInfo.Age}"/>
            <Label Content="编  号：" Height="25" Width="50" />
            <Label x:Name="lbSPPBNumber" Height="25" Width="80" Content="{Binding BasicInfo.Number}"/>
            <ComboBox x:Name="txSPPBLoop" Width="120" HorizontalAlignment="Left" Height="25" VerticalContentAlignment="Center" IsEditable="True" 
                       ItemsSource="{Binding BasicInfo.PSPPB ,Converter={StaticResource SPPBNumberConverter}}">
                <ComboBox.Text>
                    <Binding Path="SPPBNumberText">
                        <Binding.ValidationRules>
                            <m:DateNumberRule />
                        </Binding.ValidationRules>
                    </Binding>
                </ComboBox.Text>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <m:EventCommand Command="{Binding Selection_SPPB_Executed }"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>
            <Button x:Name="btSPPBSave" Content="保  存" HorizontalAlignment="Right" HorizontalContentAlignment="Center" Margin="85,0,0,0" Height="25" Width="45">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <m:EventCommand Command="{Binding Load_SPPB_Executed }"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
            <Button x:Name="btSPPBLoad" Content="读  取" HorizontalAlignment="Right" HorizontalContentAlignment="Center" Margin="85,0,0,0" Height="25" Width="45" >
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <m:EventCommand Command="{Binding Load_SPPB_Executed }"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </StackPanel>
        <Grid DockPanel.Dock="Top" Margin="5" IsEnabled="{Binding SPPBContentEnable}">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!--#region SPPB-->
            <Border BorderBrush="Black" BorderThickness="0,1,0,0" Grid.ColumnSpan="3" Margin="0">
                <Label Height="25" Content="SPPB" FontWeight="Bold"/>
            </Border>

            <StackPanel  HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" >
                <Label Content="(1) 平衡测试" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,0,0,0" Height="25" />
                <WrapPanel>
                    <Label Content="①" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                    <Image Source="/Resources/Images/SPPB_1.bmp" Height="25" />
                    <Label Content="10秒：" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" />
                    <RadioButton x:Name="rbSPPBYes1" Content="是" GroupName="SPPB11" Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" >
                        <RadioButton.IsChecked>
                            <Binding Path="SPPBContent.BalanceTesting1" Converter="{StaticResource BalanceTesting1Converter}" ConverterParameter="01"/>
                        </RadioButton.IsChecked>
                    </RadioButton>
                    <RadioButton x:Name="rbSPPBNo1"  Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="15,0,0,0" GroupName="SPPB11" >
                        <RadioButton.IsChecked>
                            <Binding Path="SPPBContent.BalanceTesting1" Converter="{StaticResource BalanceTesting1Converter}" ConverterParameter="00"/>
                        </RadioButton.IsChecked>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center" >
                            <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="否：" />
                            <TextBox x:Name="txSPPB11" Width="25" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="25" VerticalContentAlignment="Center" 
                                     IsEnabled="{Binding SPPBContent.BalanceTesting1, Converter={StaticResource BalanceTesting1Converter}, ConverterParameter=00}" >
                                <TextBox.Text>
                                    <Binding Path="SPPBContent.BalanceTesting1" Converter="{StaticResource BalanceTesting1Converter}" ConverterParameter="10">
                                        <Binding.ValidationRules>
                                            <m:IntRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="秒" />
                            <TextBox x:Name="txSPPB12" Width="25" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" 
                                     IsEnabled="{Binding SPPBContent.BalanceTesting1, Converter={StaticResource BalanceTesting1Converter}, ConverterParameter=00}" >
                                <TextBox.Text>
                                    <Binding Path="SPPBContent.BalanceTesting1" Converter="{StaticResource BalanceTesting1Converter}" ConverterParameter="11">
                                        <Binding.ValidationRules>
                                            <m:IntRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="分秒" />
                        </StackPanel>
                    </RadioButton>
                </WrapPanel>
                <WrapPanel>
                    <Label Content="②" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                    <Image Height="25" Source="/Resources/Images/SPPB_2.bmp" />
                    <Label Content="10秒：" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" />
                    <RadioButton x:Name="rbSPPBYes2" Content="是" GroupName="SPPB12" Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" >
                        <RadioButton.IsChecked>
                            <Binding Path="SPPBContent.BalanceTesting2" Converter="{StaticResource BalanceTesting2Converter}" ConverterParameter="01"/>
                        </RadioButton.IsChecked>
                    </RadioButton>
                    <RadioButton x:Name="rbSPPBNo2"  Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="15,0,0,0" GroupName="SPPB12">
                        <RadioButton.IsChecked>
                            <Binding Path="SPPBContent.BalanceTesting2" Converter="{StaticResource BalanceTesting2Converter}" ConverterParameter="00"/>
                        </RadioButton.IsChecked>                    
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center" >
                            <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="否：" />
                            <TextBox x:Name="txSPPB21" Width="25" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="25" VerticalContentAlignment="Center"
                                     IsEnabled="{Binding SPPBContent.BalanceTesting2, Converter={StaticResource BalanceTesting2Converter}, ConverterParameter=00}" >
                                <TextBox.Text>
                                    <Binding Path="SPPBContent.BalanceTesting2" Converter="{StaticResource BalanceTesting2Converter}" ConverterParameter="10">
                                        <Binding.ValidationRules>
                                            <m:IntRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="秒" />
                            <TextBox x:Name="txSPPB22" Width="25" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" 
                                     IsEnabled="{Binding SPPBContent.BalanceTesting2, Converter={StaticResource BalanceTesting2Converter}, ConverterParameter=00}" >
                                <TextBox.Text>
                                    <Binding Path="SPPBContent.BalanceTesting2" Converter="{StaticResource BalanceTesting2Converter}" ConverterParameter="11">
                                        <Binding.ValidationRules>
                                            <m:IntRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="分秒" />
                        </StackPanel>
                    </RadioButton>
                </WrapPanel>
                <WrapPanel>
                    <Label Content="③" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                    <Image Source="/Resources/Images/SPPB_3.bmp" Height="25" />
                    <Label Content="10秒：" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" />
                    <RadioButton x:Name="rbSPPBYes3" Content="是" GroupName="SPPB13" Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  >
                        <RadioButton.IsChecked>
                            <Binding Path="SPPBContent.BalanceTesting3" Converter="{StaticResource BalanceTesting3Converter}" ConverterParameter="01"/>
                        </RadioButton.IsChecked>
                    </RadioButton>
                    <RadioButton x:Name="rbSPPBNo3"  Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="15,0,0,0" GroupName="SPPB13" >
                        <RadioButton.IsChecked>
                            <Binding Path="SPPBContent.BalanceTesting3" Converter="{StaticResource BalanceTesting3Converter}" ConverterParameter="00"/>
                        </RadioButton.IsChecked>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center" >
                            <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="否：" />
                            <TextBox x:Name="txSPPB31" Width="25" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="25" VerticalContentAlignment="Center" 
                                      IsEnabled="{Binding SPPBContent.BalanceTesting3, Converter={StaticResource BalanceTesting3Converter}, ConverterParameter=00}" >
                                <TextBox.Text>
                                    <Binding Path="SPPBContent.BalanceTesting3" Converter="{StaticResource BalanceTesting3Converter}" ConverterParameter="10">
                                        <Binding.ValidationRules>
                                            <m:IntRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="秒" />
                            <TextBox x:Name="txSPPB32" Width="25" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" 
                                      IsEnabled="{Binding SPPBContent.BalanceTesting3, Converter={StaticResource BalanceTesting3Converter}, ConverterParameter=00}" >
                                <TextBox.Text>
                                    <Binding Path="SPPBContent.BalanceTesting3" Converter="{StaticResource BalanceTesting3Converter}" ConverterParameter="11">
                                        <Binding.ValidationRules>
                                            <m:IntRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="分秒" />
                        </StackPanel>
                    </RadioButton>
                </WrapPanel>
            </StackPanel>
            <StackPanel  HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" >
                <Label Content="(2) 4米通常步行速度测试" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,0,0,0" Height="25" />
                <WrapPanel>
                    <Label Content="① 时间：" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                    <TextBox x:Name="txSPPB41" Width="45" Height="25" VerticalContentAlignment="Center" >
                        <TextBox.Text>
                            <Binding Path="SPPBContent.walkingTesting1" Converter="{StaticResource WalkingTestingConverter}" ConverterParameter="10">
                                <Binding.ValidationRules>
                                    <m:IntRule />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="秒" />
                    <TextBox x:Name="txSPPB42" Width="45" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" >
                        <TextBox.Text>
                            <Binding Path="SPPBContent.walkingTesting1" Converter="{StaticResource WalkingTestingConverter}" ConverterParameter="11">
                                <Binding.ValidationRules>
                                    <m:IntRule />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="分秒" />
                </WrapPanel>
                <WrapPanel>
                    <Label Content="② 时间：" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                    <TextBox x:Name="txSPPB51" Width="45" Height="25" VerticalContentAlignment="Center" >
                        <TextBox.Text>
                            <Binding Path="SPPBContent.walkingTesting2" Converter="{StaticResource WalkingTestingConverter}" ConverterParameter="10">
                                <Binding.ValidationRules>
                                    <m:IntRule />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="秒" />
                    <TextBox x:Name="txSPPB52" Width="45" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" >
                        <TextBox.Text>
                            <Binding Path="SPPBContent.walkingTesting2" Converter="{StaticResource WalkingTestingConverter}" ConverterParameter="11">
                                <Binding.ValidationRules>
                                    <m:IntRule />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="分秒" />
                </WrapPanel>
                <WrapPanel>
                    <Label Content="辅助工具的使用：" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                    <RadioButton x:Name="rbSPPBYes4" Content="有" GroupName="SPPB21" Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="15,0,0,0" >
                        <RadioButton.IsChecked>
                            <Binding Path="SPPBContent.walkingTesting1" Converter="{StaticResource WalkingTestingConverter}" ConverterParameter="01"/>
                        </RadioButton.IsChecked>
                    </RadioButton>
                    <RadioButton x:Name="rbSPPBNo4" Content="无" GroupName="SPPB21" Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="15,0,0,0" >
                        <RadioButton.IsChecked>
                            <Binding Path="SPPBContent.walkingTesting1" Converter="{StaticResource WalkingTestingConverter}" ConverterParameter="00"/>
                        </RadioButton.IsChecked>
                    </RadioButton>
                </WrapPanel>
            </StackPanel>
            <StackPanel  HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Grid.Row="1" >
                <Label Content="(3) 坐立起测试（5次）" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                <RadioButton x:Name="rbSPPBYes5"  Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="15,0,0,0" HorizontalAlignment="Left" GroupName="SPPB31" >
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center" >
                        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="时间" />
                        <TextBox x:Name="txSPPB61" Width="45" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="25" VerticalContentAlignment="Center" IsEnabled="False" />
                        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="秒" />
                        <TextBox x:Name="txSPPB62" Width="45" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" IsEnabled="False" />
                        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="分秒" />
                    </StackPanel>
                </RadioButton>

                <RadioButton x:Name="rbSPPBNo5"  Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="15,0,0,0" GroupName="SPPB31" >
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center" >
                        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="不能完成5次，可完成" />
                        <TextBox x:Name="txSPPB7" Width="45" Height="25" VerticalContentAlignment="Center" IsEnabled="False" />
                        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="次" />

                    </StackPanel>
                </RadioButton>
            </StackPanel>

            <!--#endregion-->
            <!--#region 平衡能力-->
            <Border BorderBrush="Black" BorderThickness="0,1,0,0" Grid.ColumnSpan="3" Grid.Row="2" Margin="0,15,0,0">
                <Label Height="25" Content="平衡能力" FontWeight="Bold"/>
            </Border>


            <StackPanel  HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="3" >
                <Label Content="(1) 3米往返步行（TUG）" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,0,0,0" Height="25" />
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Left" Margin="15,0,0,0" >
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="时间：" />
                    <TextBox x:Name="txBalance11" Width="45" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="25" VerticalContentAlignment="Center" />
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="秒" />
                    <TextBox x:Name="txBalance12" Width="45" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="分秒" />
                </StackPanel>
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Left" Margin="15,0,0,0" >
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="辅助工具的使用：" />
                    <RadioButton x:Name="rbBalanceYes" Content="是"  Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="15,0,0,0" GroupName="SPPB41" />
                    <RadioButton x:Name="rbBalanceNo" Content="否" Height="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="15,0,0,0" GroupName="SPPB41" />
                </StackPanel>

            </StackPanel>
            <StackPanel  HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Grid.Row="3" >
                <Label Content="(2) 体前屈（FRT）" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,0,0,0" Height="25" />
                <StackPanel Orientation="Horizontal">
                    <Label Content="左：①" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                    <TextBox x:Name="txBalance21" Width="45" Height="25" VerticalContentAlignment="Center" />
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="cm" />
                    <Label Content="②" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                    <TextBox x:Name="txBalance22" Width="45" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="cm" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="右：①" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                    <TextBox x:Name="txBalance31" Width="45" Height="25" VerticalContentAlignment="Center" />
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="cm" />
                    <Label Content="②" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                    <TextBox x:Name="txBalance32" Width="45" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="cm" />
                </StackPanel>

            </StackPanel>
            <StackPanel  HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Grid.Row="3" >
                <Label Content="(3) 座位双脚开闭" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                <StackPanel Orientation="Horizontal">
                    <Label Content="①" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                    <TextBox x:Name="txBalance41" Width="45" Height="25" VerticalContentAlignment="Center" />
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="个/10秒" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="①" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                    <TextBox x:Name="txBalance42" Width="45" Height="25" VerticalContentAlignment="Center" />
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="个/10秒" />
                </StackPanel>
            </StackPanel>

            <StackPanel  HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="4" >
                <Label Content="(4) 单脚站立" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,0,0,0" Height="25" />
                <StackPanel Orientation="Horizontal">
                    <Label Content="左：①" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                    <TextBox x:Name="txBalance51" Width="45" Height="25" VerticalContentAlignment="Center" />
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="秒" />
                    <Label Content="②" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                    <TextBox x:Name="txBalance52" Width="45" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="秒" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="右：①" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                    <TextBox x:Name="txBalance61" Width="45" Height="25" VerticalContentAlignment="Center" />
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="秒" />
                    <Label Content="②" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" Margin="15,0,0,0" />
                    <TextBox x:Name="txBalance62" Width="45" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="秒" />
                </StackPanel>
            </StackPanel>
            <!--#endregion-->
            <!--#region 体型-->
            <Border BorderBrush="Black" BorderThickness="0,1,0,0" Grid.ColumnSpan="3" Grid.Row="5" Margin="0,15,0,0">
                <Label Height="25" Content="体型" FontWeight="Bold"/>
            </Border>
            <StackPanel Grid.Row="6" Grid.ColumnSpan="3">
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal" Margin="15,0" Width="120">
                        <Label Content="身高：" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" />
                        <TextBox x:Name="txSize1" Width="45" Height="25" VerticalContentAlignment="Center" />
                        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="cm" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="120" Margin="15,0">
                        <Label Content="体重：" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" />
                        <TextBox x:Name="txSize2" Width="45" Height="25" VerticalContentAlignment="Center" />
                        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="kg" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="120" Margin="15,0">
                        <Label Content="腰围：" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" />
                        <TextBox x:Name="txSize3" Width="45" Height="25" VerticalContentAlignment="Center" />
                        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="cm" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="120" Margin="15,0">
                        <Label Content="臀围：" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" />
                        <TextBox x:Name="txSize4" Width="45" Height="25" VerticalContentAlignment="Center" />
                        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="cm" />
                    </StackPanel>
                </WrapPanel>

                <WrapPanel Orientation="Horizontal" Margin="0,5">
                    <StackPanel Orientation="Horizontal" Margin="15,0" Width="180">
                        <Label Content="上臂围度（左）：" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" />
                        <TextBox x:Name="txSize5" Width="45" Height="25" VerticalContentAlignment="Center" />
                        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="cm" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="180" Margin="15,0">
                        <Label Content="上臂围度（右）：" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" />
                        <TextBox x:Name="txSize6" Width="45" Height="25" VerticalContentAlignment="Center" />
                        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="cm" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="15,0" Width="180">
                        <Label Content="大腿围度（左）：" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" />
                        <TextBox x:Name="txSize7" Width="45" Height="25" VerticalContentAlignment="Center" />
                        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="cm" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="180" Margin="15,0">
                        <Label Content="大腿围度（右）：" VerticalAlignment="Center" HorizontalAlignment="Left" Height="25" />
                        <TextBox x:Name="txSize8" Width="45" Height="25" VerticalContentAlignment="Center" />
                        <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="cm" />
                    </StackPanel>
                </WrapPanel>
            </StackPanel>
            <!--#endregion-->

            <!--#region 基本生命体征-->
            <Border BorderBrush="Black" BorderThickness="0,1,0,0" Grid.ColumnSpan="3" Grid.Row="7" Margin="0,15,0,0">
                <Label Height="25" Content="基本生命体征" FontWeight="Bold"/>
            </Border>
            <StackPanel Grid.Row="8" Grid.ColumnSpan="3">
                <WrapPanel Orientation="Horizontal">
